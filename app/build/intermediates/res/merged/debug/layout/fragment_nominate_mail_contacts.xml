<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helpinghands.fragment.NominateMailContactsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hh_hero"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_transparent_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <TextView
            android:id="@+id/nominate_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="5dp"
            android:text="Nominate Contacts"
            android:layout_gravity="top|start"
            android:typeface="monospace"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/contact3"
                >


                <EditText
                    android:id="@+id/contact3_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:textSize="20sp"
                    android:textColorHint="@color/white"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/phonebook"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/contact3_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/contact3"
                android:hint="Email"
                android:textSize="20sp"
                android:textColorHint="@color/white"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/contact4"
                android:layout_below="@+id/contact3_phone"

                >


                <EditText
                    android:id="@+id/contact4_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:hint="Name"
                    android:textSize="20sp"
                    android:textColorHint="@color/white"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/phonebook"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/contact4_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:hint="Email"
                android:textSize="20sp"
                android:textColorHint="@color/white"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/nominate_email_contacts_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:src="@drawable/next"

            />

    </FrameLayout>

</RelativeLayout>
