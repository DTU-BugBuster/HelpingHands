<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helpinghands.fragment.StopFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hh_hero"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_transparent_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="5dp"
                android:text="Stop"
                android:layout_gravity="top|start"
                android:typeface="monospace"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />


            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stop"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Notify that you are out of danger"
                android:typeface="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <EditText
                    android:id="@+id/stop_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Enter Secret PIN"
                    android:textColorHint="@color/white"
                    android:textSize="25sp"
                    />

                <Button
                    android:id="@+id/button_connect_with_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@drawable/rounded_transparent_button"
                    android:text="@string/STOP"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />



            </LinearLayout>






        </RelativeLayout>


    </FrameLayout>

</FrameLayout>
